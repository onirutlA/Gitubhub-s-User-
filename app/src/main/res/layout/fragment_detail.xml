<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/Appbar"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        app:layout_scrollFlags="scroll|snap">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/detail_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"

            app:navigationIcon="@drawable/ic_back_24">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detail_header_name"
                    style="@style/Subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Jake Wharton" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="25dp"
            app:layout_scrollFlags="scroll|snap">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/detail_user_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:src="@drawable/developer_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detail_user_name"
                style="@style/Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/detail_user_image"
                app:layout_constraintStart_toStartOf="@+id/detail_user_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_user_image"
                tools:text="Ricky Alturino" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detail_user_nickname"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/detail_user_name"
                app:layout_constraintStart_toStartOf="@+id/detail_user_name"
                app:layout_constraintTop_toBottomOf="@+id/detail_user_name"
                tools:text="onirutlA" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detail_user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_location"
                app:layout_constraintStart_toEndOf="@+id/ic_location"
                app:layout_constraintTop_toTopOf="@+id/ic_location"
                tools:text="Palembang, Indonesia" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_company"
                android:tint="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/ic_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_user_nickname" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_company"
                app:layout_constraintStart_toEndOf="@+id/ic_company"
                app:layout_constraintTop_toTopOf="@+id/ic_company"
                tools:text="Sriwijaya University" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_location"
                android:tint="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/ic_link"
                app:layout_constraintEnd_toEndOf="@+id/ic_company"
                app:layout_constraintStart_toStartOf="@+id/ic_company"
                app:layout_constraintTop_toBottomOf="@+id/ic_company" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_link"
                android:tint="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/ic_twitter"
                app:layout_constraintEnd_toEndOf="@+id/ic_location"
                app:layout_constraintStart_toStartOf="@+id/ic_location"
                app:layout_constraintTop_toBottomOf="@+id/ic_location" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detail_tv_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_link"
                app:layout_constraintStart_toEndOf="@+id/ic_link"
                app:layout_constraintTop_toTopOf="@+id/ic_link"
                tools:text="onirutla.medium.com" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_twitter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ic_link"
                app:layout_constraintStart_toStartOf="@+id/ic_link"
                app:layout_constraintTop_toBottomOf="@+id/ic_link" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detail_tv_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_twitter"
                app:layout_constraintStart_toEndOf="@+id/ic_twitter"
                app:layout_constraintTop_toTopOf="@+id/ic_twitter"
                tools:text="onirutlA" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/detail_tab_layout"
            style="@style/Widget.MaterialComponents.TabLayout.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/detail_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>