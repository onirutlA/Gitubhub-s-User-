<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/home_fragment">
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.onirutla.githubsuser.view.home.HomeFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.onirutla.githubsuser.view.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.onirutla.githubsuser.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/followingFragment"
        android:name="com.onirutla.githubsuser.view.following.FollowingFragment"
        android:label="fragment_following"
        tools:layout="@layout/fragment_following" >
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/followerFragment"
        android:name="com.onirutla.githubsuser.view.follower.FollowerFragment"
        android:label="fragment_follower"
        tools:layout="@layout/fragment_follower" >
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.onirutla.githubsuser.view.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailFragment_to_followingFragment"
            app:destination="@id/followingFragment" />
        <action
            android:id="@+id/action_detailFragment_to_followerFragment"
            app:destination="@id/followerFragment" />
    </fragment>
    <fragment
        android:id="@+id/setting_fragment"
        android:name="com.onirutla.githubsuser.view.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <action android:id="@+id/action_global_search_fragment" app:destination="@id/search_fragment" />
</navigation>